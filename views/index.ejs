<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Our CSS -->
        <link href="favicon.ico" rel="icon" type="image/x-icon" />
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <!-- Weather icons -->
        <link rel="stylesheet" type="text/css" href="css/weather-icons.css">

        <title>Muvis</title>
    </head>
    <body>
        <nav class="navbar fixed-top navbar-dark bg-dark">
            <div class="centerflex">
            <div id="mySidenav" class="sidenav bg-dark">
				<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
				<p>Toggle Visuals</p>
				<span class="toggle-items">Waves: <input type="checkbox" id="waves"  onclick="toggleWaves()" checked> </span>
				<span class="toggle-items">Circles: <input type="checkbox" id="blobs"  onclick="toggleBlobs()" checked> </span>
				<span class="toggle-items">Rain: <input type="checkbox" id="rain"  onclick="toggleRain()" checked> </span>
			</div>

				<span class="menu-icon" style="font-size:30px;cursor:pointer;" onclick="openNav()">&#9776;</span>
                <a class="navbar-brand" href="https://muvis-app.herokuapp.com">Muvis</a>
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="<%= "wi wi-owm-" + time + "-" + weather %>"></i>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <form class="form-inline" action="/" method="post">
                        <input name="zip" type="text" class="form-control" placeholder="Zip code">
                    </form>
                </div>
            </div>

            <div class="form-inline" id="hud">
                <input class="form-control input-xxlarge mr-2" id="trackInput" type="text" placeholder="SoundCloud URL...">
                <button class="btn btn-default" id="goButton" value="undefined" onclick="loadTrack()">Play</button>
            </div>
        </nav>

        <div id="loading-modal"><span class="loading-text"><img src="img/loading.gif"/></span></div>

        <!-- Our script -->
        <script>
            var weather = <%= weather %>; // make weather and time accessible to p5.js scripts
            var time = "<%= time %>";
        </script>
        <script src="js/drop.js"></script>
        <script src="js/particle.js"></script>

        <script src="js/script.js"></script>
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
        <!-- p5.js -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.1/p5.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.1/addons/p5.sound.min.js"></script>
        <!-- SoundCloud -->
        <script src="https://connect.soundcloud.com/sdk/sdk-3.3.0.js"></script>
        <script>
			function openNav() {
				document.getElementById("mySidenav").style.width = "250px";
			}

			function closeNav() {
				document.getElementById("mySidenav").style.width = "0";
			}
		</script>
    </body>
</html>
